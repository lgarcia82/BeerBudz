<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetupProfileActivity"
    android:background="@drawable/background_beer">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/logo_budz" />

    <EditText
        android:id="@+id/edit_first_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint=" First Name"
        android:drawableLeft="@drawable/setup_name_icon"/>

    <EditText
        android:id="@+id/edit_last_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_first_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint=" Last Name"
        android:drawableLeft="@drawable/setup_name_icon"/>

    <EditText
        android:id="@+id/edit_username"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_last_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint=" User Name"
        android:drawableLeft="@drawable/setup_username"/>

    <Spinner
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:id="@+id/edit_spinner"
        android:layout_below="@+id/edit_username"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
    </Spinner>

    <Button
        android:id="@+id/btn_signup"
        android:layout_below="@+id/edit_spinner"
        android:layout_width="255dp"
        android:layout_height="50dp"
        android:elevation="5dp"
        android:shape="rectangle"
        android:layout_gravity="left"
        android:text="Submit"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:focusable="true"
        android:thicknessRatio="1.9"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_rounded_black"
        android:typeface="normal"
        android:layout_marginTop="50dp"
        android:onClick="createProfile"/>

</RelativeLayout>